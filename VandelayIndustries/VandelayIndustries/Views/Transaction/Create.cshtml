@model VandelayIndustries.ViewModels.TransactionCreateViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Transaction</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Date:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Buyer:</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Buyers, Model.Buyers, "-- Select --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Buyers, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Seller:</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Sellers, Model.Sellers, "-- Select --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Sellers, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Sales Person:</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SalesPersons, Model.SalesPersons, "-- Select --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SalesPersons, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Item(s):</label>
            <div class="col-md-8" onchange="ItemAdd()">
                @Html.DropDownListFor(model => model.Items, Model.Items, "-- Select --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Items, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2" id="item-list"></div>
        </div>

            <div class="col-md-offset-2 col-md-2">
                <a href="#" class="btn btn-default" onclick="CreateTransaction()">Create</a>
            </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
